

if (!document.getElementsByClassName("card-body")[0]) {

  document.getElementsByClassName("card")[0].insertAdjacentHTML("afterbegin", "<%= j render 'show_email', email: @email %>");
} else if (document.getElementsByClassName("card-body")[0]) {

  document.getElementsByClassName("card-body")[0].remove()
  document.getElementsByClassName("card")[0].insertAdjacentHTML("afterbegin", "<%= j render 'show_email', email: @email %>");
}


