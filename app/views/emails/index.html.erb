
<div class="container">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <div class="row justify-content-center align-items-center">
    <div class="m-3">
    <%= link_to "Recevoir un nouveau mail", @email, :method => :post, remote: true, :class => "btn btn-lg btn-primary" %>
    </div>
  </div>
  <div class="row">
    <table class="table">
      <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col-2">Email Sender</th>
        <th scope="col">Email content</th>
      </tr>
      </thead>
      <tbody>
      <% @allMail.each do |mail| %>
      <tr>
        <th id=<%= mail.id %> scope="row"> <%= mail.id %></th>
        <td> <%= link_to "#{mail.object}", email_path(mail.id), :method => :get , remote: true, :class => "btn btn-lg btn-primary" %> </td>
        <td>  </td>
      </tr>
      <% end %>
      </tr>
      </tbody>
    </table>
  </div>
</div>

