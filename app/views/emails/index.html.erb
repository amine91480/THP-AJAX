<div class="container-fluid" >
  <div class="row justify-content-center align-items-center">
    <div class="m-3">
    <%= link_to "Recevoir un nouveau mail", @email, :method => :post, remote: true, :class => "btn btn-lg btn-primary" %>
    </div>
  </div>

  <div class="row justify-content-around">
    <div class="col-3">
      <ul id='email_list'class="list-group">
      <% @emails.each do |email|%>
        <li id="<%=email.id %>" class="list-group-item d-flex justify-content-between align-items-center">
          <h4><%= link_to "#{email.object}", email_path(email.id), :method => :get , remote: true %></h4>
          <span class="badge badge-primary badge-pill"> Not view </span>
        </li>
      <% end %>
      </ul>
    </div>
    <div class="col-8">
      <div class="card">
        <!-- Ici est la partial _show_email.html.erb-->
      </div>
  </div>
</div>
</div>
